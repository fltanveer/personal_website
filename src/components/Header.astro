---
import HeaderAuxLinks from "./HeaderAuxLinks.astro";
import HeaderLink from "./HeaderLink.astro";
// import { SITE_TITLE } from "../config";
---

<header class="" id="top">
  <nav
    class="items-center fixed top-0 left-0 w-screen bg-black/80 z-10 backdrop-blur-sm text-white"
    id="fixed-nav"
  >
    <div
      class="max-w-blog mx-auto mt-4 w-full flex lg:justify-between pb-3 px-1 transition-all justify-center"
    >
      <HeaderLink
        href="/"
        class="text-2xl font-bold hover:no-underline text-white hover:text-gray-200"
      >
        <!-- {SITE_TITLE} -->
        AR Tanveer
      </HeaderLink>
      <HeaderAuxLinks class="hidden lg:flex text-white" />
    </div>
  </nav>
</header>

<script>
  document.addEventListener("scroll", () => {
    const element = document.getElementById("fixed-nav");
    const scroll =
      document.documentElement.scrollTop || document.body.scrollTop;

    if (element) {
      if (scroll > 75) {
        element.classList.remove("bg-transparent");
        element.classList.add("bg-white/70");
      } else {
        element.classList.remove("bg-white/70");
        element.classList.add("bg-transparent");
      }
    }
  });
</script>
